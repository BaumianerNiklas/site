---
interface Props {
	/** The name of a Ionicon icon */
	iconName: string;
	/** The url this button should link to */
	url: string;
}

const { iconName, url } = Astro.props;
---

<div class="grid place-items-center w-11 h-11">
	<a href={url} target="blank">
		<div
			class={`${iconName} w-9 h-9 text-white hover:w-11 hover:h-11 transition-all`}
		>
		</div>
	</a>
</div>
